<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp">

    <RelativeLayout
        android:id="@+id/Card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/profile_image"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:id="@+id/image_contact"
            android:layout_marginTop="15dp"
            android:layout_width="280dp"
            android:layout_height="220dp"></ImageView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/image_contact"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="user name"
            android:textColor="@color/colorPrimary"
            android:id="@+id/name_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <Button
            android:layout_centerHorizontal="true"
            android:drawableTint="@android:color/white"
            android:drawableTop="@drawable/video_call"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_below="@id/name_contact"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/call_btn"
            android:layout_width="90dp"
            android:layout_height="43dp"></Button>
    </RelativeLayout>

</androidx.cardview.widget.CardView>