<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp">

    <RelativeLayout
        android:id="@+id/Card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/profile_image"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:id="@+id/image_notification"
            android:layout_marginTop="15dp"
            android:layout_width="280dp"
            android:layout_height="220dp"></ImageView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/image_notification"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="user name"
            android:textColor="@color/colorPrimary"
            android:id="@+id/name_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <Button
            android:textSize="13dp"
            android:textAllCaps="false"
            android:text="Accept Friend Request"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_below="@id/name_notification"
            android:layout_marginTop="8dp"
            android:id="@+id/request_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></Button>
        <Button
            android:textSize="13dp"
            android:textAllCaps="false"
            android:text="Cancel Friend Request"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:background="@android:color/holo_blue_light"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="12dp"
            android:layout_below="@id/request_accept_btn"
            android:layout_marginTop="8dp"
            android:id="@+id/request_desline_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></Button>
    </RelativeLayout>

</androidx.cardview.widget.CardView>